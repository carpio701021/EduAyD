extends ../base

block scripts
	script(language="javascript",src='/javascript/maestros/ingresar_notas.js')

block content
	br
	div.container
		h1 Ingresar Notas			
		div(id="select_cursos")
			p
				b Ciclo
			select(id='ciclo',name='ciclo')
				option(value='1') Ciclo 2015
			p
				b Unidad
			select(id='unidad',name='unidad')
				option(value='1') 1ra Unidad

			p
				b Curso: 
			select(id='curso',name='curso',onchange="seleccionar_curso();")
				option(value='-1', disabled selected) Seleccione un curso
				each cur,id in cursos
					option(value='{"curso":#{cur.curso},"seccion":#{cur.seccion}}') #{cur.nombre_curso}, secci√≥n #{cur.nombre_seccion}, #{cur.descripcion_grado}
			br
			br

			
		
		div(id='tbl_ingresar_notas', style='display:none')
			form(action='/maestros/ingresar_notas/guardar_notas', method='POST')
				div(id='tabla_alumnos_asignaturas')
				input(type='submit',value='Guardar notas')
